<div id="clearance" class="password-reset">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="mb-3 row">
      <div class="col-md-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-md-3">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
