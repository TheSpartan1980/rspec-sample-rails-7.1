<div class="col">
  <div class="card" id="<%= dom_id recipe %>">
    <% if recipe.photo.attached? %>
      <%= image_tag recipe.photo, class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to recipe.name, recipe %></h5>
      <p class="card-text"><%= recipe.description %></p>
    </div>
  </div>
</div>
